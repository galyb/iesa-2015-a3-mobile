<?xml version='1.0' encoding='utf-8'?>
<widget id="ch.inagua.training.phonegap" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HelloWorld</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>

    <preference name="SplashScreen" value="screen"/>
    <preference name="SplashScreenDelay" value="10000"/>

    <content src="index.html" />
    <access origin="*" />
    <engine name="ios" version="3.8.0" />




      
              <!-- iOS 8.0+ -->
              <!-- iPhone 6 Plus  -->
              <icon src="assets/icons/icon-60@3x.png" platform="ios" width="180" height="180" />
              <!-- iOS 7.0+ -->
              <!-- iPhone / iPod Touch  -->
              <icon src="assets/icons/icon-60.png" platform="ios" width="60" height="60" />
              <icon src="assets/icons/icon-60@2x.png" platform="ios" width="120" height="120" />

              <!-- iPad -->
              <icon src="assets/icons/icon-76.png" platform="ios" width="76" height="76" />
              <icon src="assets/icons/icon-76@2x.png" platform="ios" width="152" height="152" />
              <!-- iOS 6.1 -->
              <!-- Spotlight Icon -->
              <icon src="assets/icons/icon-40.png" platform="ios" width="40" height="40" />
              <icon src="assets/icons/icon-40@2x.png" platform="ios" width="80" height="80" />
              <!-- iPhone / iPod Touch -->
              <icon src="assets/icons/icon.png" platform="ios" width="57" height="57" />
              <icon src="assets/icons/icon@2x.png" platform="ios" width="114" height="114" />
              <!-- iPad -->
            <icon src="assets/icons/icon-72.png" platform="ios" width="72" height="72" />
            <icon src="assets/icons/icon-72@2x.png" platform="ios" width="144" height="144" />
              <!-- iPhone Spotlight and Settings Icon -->
            <icon src="assets/icons/icon-small.png" platform="ios" width="29" height="29" />
            <icon src="assets/icons/icon-small@2x.png" platform="ios" width="58" height="58" />
              <!-- iPad Spotlight and Settings Icon -->
            <icon src="assets/icons/icon-50.png" platform="ios" width="50" height="50" />
            <icon src="assets/icons/icon-50@2x.png" platform="ios" width="100" height="100" />


            <platform name="ios">
    <!-- images are determined by width and height. The following are supported -->
    <splash src="assets/splash/Default~iphone.png" width="320" height="480"/>
    <splash src="assets/splash/Default@2x~iphone.png" width="640" height="960"/>
    <splash src="assets/splash/Default-Portrait~ipad.png" width="768" height="1024"/>
    <splash src="assets/splash/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
    <splash src="assets/splash/Default-Landscape~ipad.png" width="1024" height="768"/>
    <splash src="assets/splash/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
    <splash src="assets/splash/Default-568h@2x~iphone.png" width="640" height="1136"/>
    <splash src="assets/splash/Default-667h.png" width="750" height="1334"/>
    <splash src="assets/splash/Default-736h.png" width="1242" height="2208"/>
    <splash src="assets/splash/Default-Landscape-736h.png" width="2208" height="1242"/>
</platform>

    <feature name="NetworkStatus">
      <param name="ios-package" value="CDVConnection" />
    </feature>


    <feature name="SplashScreen">
      <param name="ios-package" value="CDVSplashScreen" />
    </feature>
     



</widget>
